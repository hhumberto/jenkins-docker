pipeline {
    agent any
    stages {
        stage("Primer paso") {
            steps {
             sh 'date'
            }
        }
        stage('Build') {
            agent {
                docker {
                    label "Serv1"
                    image 'node:16-alpine'
                    // Run the container on the node specified at the
                    // top-level of the Pipeline, in the same workspace,
                    // rather than on a new node entirely:
                    //reuseNode true
                }
            }
            steps {
                sh 'node --version'
            }
        }
    }
}
